@page
@model Vitec_MV.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Produkter";
}

<h1>Produkter</h1>
<hr />
@{ int count = 0; }
@foreach (var item in Model.Product)
{
    string description = item.Description;
    if (description.Length > 30) { description = item.Description.Substring(0, 110) + "..."; }
    <div style="position: relative; width: 22%; height: 450px; float: left;">
        <div style="width: 100%; height: 390px; border:1px solid black; ">
            <img src="https://www.mv-nordic.com/wp-content/uploads/2017/11/CDORD_gradient.png" width="100%" height="200px" />
            <div style="padding-top: 5px; padding-left: 5px; padding-right: 5px;">
                <div style="">
                    <b style="font-size: 150%;">
                        @Html.DisplayFor(modelItem => item.Titel)
                    </b>
                </div>
                <div>
                    @Html.DisplayFor(modelItem => description)
                </div>
                <div style="position: absolute; bottom: 65px;">
                    <a asp-page="./Details" asp-route-id="@item.ID">Se mere </a>
                    <br />
                    Pris: @Html.DisplayFor(modelItem => item.Price) | <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                </div>
            </div>
        </div>
        <div style="position: relative; width: 100%; height: 60px; float: left;"></div>
    </div>
    if (count != 3)
    {
        <div style="position: relative; width: 4%; height: 450px; float: left;"></div>
        count++;
    }
    else
    {
        count = 1;
    }
}
